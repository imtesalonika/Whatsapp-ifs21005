<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/byun"
        app:civ_border_color="@color/primary_light"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/status_pertama"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Byun Baekhyun"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/status_pertama"
        app:layout_constraintTop_toTopOf="@id/status_pertama"
        android:layout_marginStart="16dp"
        android:id="@+id/nama_story"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17.56"
        android:id="@+id/waktu_story"
        app:layout_constraintTop_toBottomOf="@id/nama_story"
        app:layout_constraintStart_toStartOf="@id/nama_story"
        android:layout_marginTop="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>